
    <%- include('./partials/header.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-centre">Add new students</h2>
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" />
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" name="age" />
                    </div>
                    <div class="mb-3">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" class="form-control" id="fees" name="fees" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
       
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-danger text-centre">List of Students</h2>
            <%# Show All Data %>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">NO</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Fees</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% var i=1 %>
                    <% data.forEach((item)=>{ %>

                        <tr>
                            <td><%= i++ %></td>
                            <td> <%= item.name %> </td>
                            <td> <%= item.age  %> </td>
                            <td> <%= item.fees %> </td>
                            <td>
                                <!-- // when we press edit button then we redirect to /student/edit/id
                                // and id of clicked item will go jump to url in title tab -->
                                <form action="/student/edit/<%= item._id %>" method="get" class="d-inline">
                                    <button type="submit"><i class="fas fa-pen-square text-info ">Edit</i></button>
                                </form>

                                <form action="/student/delete/<%= item._id %>" method="post" class="d-inline">
                                    <button type="submit"><i class="fas fa-pen-square text-info ">Delete</i></button>
                                </form>
                                
                            </td>
                        </tr>

                    <%   }) %>
                    
                </tbody>
            </table>
        </div>
    </div></div>

    

